<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#D6D6C2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="80px">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spotify_app"
            android:textAllCaps="true"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="launchSpotify"
            android:background="#9966FF"
            android:minHeight="50dp"
            android:minWidth="220dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scores_app"
            android:textAllCaps="true"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:onClick="launchScores"
            android:background="#9966FF"
            android:layout_marginTop="10dp"
            android:minHeight="50dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/library_app"
            android:textAllCaps="true"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:onClick="launchLibrary"
            android:background="#9966FF"
            android:layout_marginTop="10dp"
            android:minHeight="50dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/build_it_bigger"
            android:textAllCaps="true"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:onClick="launchBuildBigger"
            android:background="#9966FF"
            android:layout_marginTop="10dp"
            android:minHeight="50dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/xyz_reader"
            android:textAllCaps="true"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:onClick="launchReader"
            android:background="#9966FF"
            android:layout_marginTop="10dp"
            android:minHeight="50dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capstone"
            android:textAllCaps="true"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:onClick="launchCaps"
            android:background="#FF9933"
            android:layout_marginTop="10dp"
            android:minHeight="50dp"/>
    </LinearLayout>
</RelativeLayout>
